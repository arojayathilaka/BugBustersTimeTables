        <DataGrid x:Name="session_data_grid" HorizontalAlignment="Left" Height="358" Margin="366,27,0,0" VerticalAlignment="Top" Width="616" SelectionChanged="session_data_grid_SelectionChanged" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Foreground="#FF0B2283" Grid.Row="1"/>
        <Label Content="Subject :" HorizontalAlignment="Left" Margin="52,145,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Subject Code :" HorizontalAlignment="Left" Margin="52,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.816,1.038" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Tag :" HorizontalAlignment="Left" Margin="52,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.658,0.115" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Group ID :" HorizontalAlignment="Left" Margin="52,271,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,-0.038" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Student Count :" HorizontalAlignment="Left" Margin="52,319,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Duration :" HorizontalAlignment="Left" Margin="52,365,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <Label Content="Lecturer(s) :" HorizontalAlignment="Left" Margin="52,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,-0.154" FontSize="14" Foreground="#FF213483" Grid.Row="1"/>
        <ComboBox x:Name="lecturer_combobx" HorizontalAlignment="Left" Margin="52,29,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.525,1.636" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Height="22" DisplayMemberPath="Name" Grid.Row="1"/>
