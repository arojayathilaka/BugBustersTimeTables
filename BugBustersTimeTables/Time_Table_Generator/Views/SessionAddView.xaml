        <ComboBox x:Name="subject_combobx" HorizontalAlignment="Left" Margin="192,147,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="SubjectName" RenderTransformOrigin="0.525,1.636" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Height="22" Grid.Row="1"/>
        <Button x:Name="create_btn_" Content="Create Session" HorizontalAlignment="Left" Margin="50,403,0,0" VerticalAlignment="Top" Width="86" Click="create_btn__Click" Background="#FF1560FF" Foreground="#FFFF9900" RenderTransformOrigin="0.52,-1" Height="24" Grid.Row="1"/>
        <ComboBox x:Name="duration_combobx" HorizontalAlignment="Left" Margin="192,365,0,0" VerticalAlignment="Top"  MinWidth="120" Foreground="#FF213483" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Grid.Row="1">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
        </ComboBox>
        <ComboBox x:Name="grp_combobx" HorizontalAlignment="Left" Margin="192,275,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.525,1.636" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Height="22" Grid.Row="1"/>
        <TextBox x:Name="count_txtbx" HorizontalAlignment="Left" Height="24" Margin="192,319,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  MinWidth="120" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Width="120" Grid.Row="1"/>
        <ComboBox x:Name="code_combobx" DisplayMemberPath="SubjectCode" HorizontalAlignment="Left" Margin="192,191,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.525,1.636" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Height="22" Grid.Row="1"/>
        <ComboBox x:Name="tag_combobx" HorizontalAlignment="Left" Margin="192,231,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.525,1.636" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Foreground="#FF213483" Height="22" DisplayMemberPath="TagName" Grid.Row="1"/>
        <Button x:Name="addlec_btn_" Content="Add lecturer" HorizontalAlignment="Left" Margin="192,27,0,0" VerticalAlignment="Top" Width="76" Background="#FF1560FF" Foreground="#FFFF9900" Height="26" Click="addlec_btn__Click" Grid.Row="1"/>
        <ListBox x:Name="lec_listbx" HorizontalAlignment="Left" Height="64" Margin="192,69,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.623,0.758" Grid.Row="1" Foreground="#FF213483"/>
